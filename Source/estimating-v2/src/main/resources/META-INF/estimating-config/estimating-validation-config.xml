<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="baseValidation" class="com.estimating.validation.AbstractBaseValidation">
		<property name="estimatingConstants" ref="estimatingConstants"/>
	</bean>

	<!-- Property -->
	<bean id="estimatingConstants" class="com.estimating.utils.EstimatingConstants" />
	
	<!-- Validation Service Map  -->
	<bean id="validationServiceMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="customerValidate" value-ref="customerValidateService"/>
			</map>
		</constructor-arg>
	</bean>
	
	<!-- Validation Implement -->
	<bean id="customerValidateService" class="com.estimating.validation.CustomerValidationImpl"  parent="baseValidation"/>
</beans>
